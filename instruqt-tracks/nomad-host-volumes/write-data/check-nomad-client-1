#!/bin/bash -l

set -e

grep -q "mysql\s\+-h\s\+mysql-server.service.consul\s\+-u\s\+web\s\+-ppassword\s\+-D\s\+itemcollection" /root/.bash_history || fail-message "You have not connected to the MySQL database on Nomad Client 1 yet."

glove_result=$(mysql -h mysql-server.service.consul -u web -ppassword -D itemcollection -s -N -e "select count(*) from items where name='glove';")

if [ $glove_result -ne 1 ]; then
  fail-message "The MySQL table does not contain 'glove'."
fi

exit 0
